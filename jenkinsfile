pipeline {
    agent any

    stages {
        stage('scm') {
            steps {
        git branch: 'main', url: 'https://github.com/Ananths1501/app.git'
            }
        }
        stage('build') {
            steps {
               sh bat "mvn clean"
               sh bat "mvn install"
}
}
stage('build to images') {
            steps {
               script{
                 sh bat 'docker build -t ananth1501/simpleapplication .'
               }
    }
}
stage('push to hub') {
            steps {
               script{
                 withDockerRegistry(credentialsId: 'Docker_cred', url: 'https://index.docker.io/v1/') {
                 sh bat 'docker push ananth1501/simpleapplication'
               }
            }
            }
}
}
}
